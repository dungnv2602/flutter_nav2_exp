{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "adb logcat -c",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "promptOnClose": true,
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "flutter pub run build_runner watch --delete-conflicting-outputs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "promptOnClose": true,
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
    ]
}